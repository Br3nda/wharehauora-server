%h2
  = @home.name

= render 'nav', home: @home

.pure-g
  .pure-u-1.pure-u-md-1-4
    - unless @home.rooms.empty?
      %h3 #{@day} Readings

  .pure-u-1.pure-u-md-3-4
    %form.pure-form
      %label
        Day
        = date_field_tag :day, @day
      %button.pure-button.pure-button-primary
        Search


  - @keys.each do |key|
    .pure-u-1.pure-u-md-1-2
      %h3= key
      = line_chart readings_path(home_id: @home.id, day: @day, key: key),
        title: "#{@day} #{key}"
