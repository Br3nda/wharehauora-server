%h2
  = @home.name

- if policy(@home).edit?
  %p
    = link_to 'edit name', edit_home_path(@home)
    = link_to 'settings', home_home_viewers_path(@home)

.pure-g
  .pure-u-2-3
    = render 'sensors', sensors: @home.sensors

- unless @home.sensors.empty?
  %h3 Readings
  .pure-g
    .pure-u-1-2
      %h3 Temperature
      = line_chart(@temperature)
    .pure-u-1-2
      %h3 Humidity
      = line_chart(@humidity)

