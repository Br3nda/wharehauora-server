%table.pure-table
  %thead
    %tr
      %th.sortable
        Name
      %th.sortable
        Sensor
  %tbody
    - rooms.each do |room|
      %tr
        %td
          = link_to room.name, home_room_path(room.home, room)
        %td
          - unless room.sensors.empty?
            = render "sensors", sensors: room.sensors
        %td
          = link_to "add sensor", new_home_room_sensor_path(@home, room)
