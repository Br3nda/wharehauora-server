/ = image_tag(image_url('whare-photo.png'))
- unless user_signed_in?
  .l-content
    .pure-u-1.pure-u-md-1-3
      .whare-table.whare-table-signin.whare-table-selected
        .whare-table-header
          %h2 Existing Users
          %span.whare-table-details
            Sign in
            %span existing users
        .sign-in-footer
          .existing-user-text
            Existing User
          .sign-in-link
            = link_to 'Sign in', new_user_session_path,
              class: 'button-choose pure-button'

%h1 Aggregate Public Data

%p Median Temperatures right now

%table.public_matrix.pure-table.pure-table-bordered
  %tr
    %th
      = image_tag(image_url('logo.png'))
    - @home_types.each do |home_type|
      %th
        = home_type.name
  - @room_types.each do |room_type|
    %tr
      %th
        = room_type.name
      - @home_types.each do |home_type|
        %td
          = @medians[home_type.id][room_type.id]
