= render 'homes/nav', home: @home

%h2= @home.name

- if @sensors.present?
  .information
    %%p= paginate(@sensors)

    %table.pure-table
      %thead
        %tr
          %th.sortable Sensor
          %th Room
          %td Last message
      %tbody
        - @sensors.each do |sensor|
          %tr
            %td= sensor.node_id
            %td= sensor.room&.name
            %td= time_ago_in_words sensor.messages.last&.updated_at if sensor.messages.last
            - if policy(sensor).edit?
              %td
                = link_to edit_sensor_path(sensor), class: 'btn edit-button' do
                  = fa_icon 'edit'
                  edit
            - if policy(sensor).destroy?
              %td
                = link_to sensor_path(sensor),
                  method: :delete,
                  data: { confirm: 'delete this sensor?' },
                  class: 'btn delete-button' do
                  = fa_icon 'trash'
                  delete

  %%p= paginate(@sensors)
- else
  %p No sensors detected in this whare.
