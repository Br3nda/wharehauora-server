!!!
%html{ lang: 'en' }
  %head
    %title
      - if content_for?(:title)
        = yield(:title)
      - else
        WharehauoraServer
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'https://www.gstatic.com/charts/loader.js'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

    %meta{ content: 'on', 'http-equiv' => 'cleartype' }/
    / webfont
    %link{ href: 'https://fonts.googleapis.com/css?family=Merriweather:700|Roboto:300,400,700&subset=latin-ext', rel: 'stylesheet' }/
    / js
    %script{ src: javascript_path('modernizr-2.8.3.js') }
    %script{ src: javascript_path('detectizr-2.1.0.min.js') }
    / mobile & iOS
    %meta{ content: 'yes', name: 'apple-mobile-web-app-capable' }/
    %meta{ content: 'width=device-width, initial-scale=1.0, user-scalable=no', name: 'viewport' }/
    %link{ href: image_url('app-icon.png'), rel: 'apple-touch-icon-precomposed' }/
    = favicon_link_tag asset_path('favicon.ico'), rel: 'icon', type:  'image/png'

  %body
    %header.header
      = link_to 'Whare Hauora', root_path, class: 'logo-sm'

    .overlay= render('layouts/menu')

    .content
      .center
        - flash.each do |name, msg|
          %p= content_tag :div, msg, class: name

        = yield

    %script{ src: javascript_path('jquery-2.1.3.min.js') }
    %script{ src: javascript_path('jquery-ui-widget.min.js') }
    %script{ src: javascript_path('jquery.selectBoxIt.min.js') }
    %script{ src: javascript_path('jquery.icheck.min.js') }
    %script{ src: javascript_path('jquery.magnific-popup.min.js') }
    %script{ src: javascript_path('tooltipster.bundle.min.js') }
    %script{ src: javascript_path('init.js') }
