%header.header=link_to 'Whare Hauora', root_path, class: 'logo'
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  %section.card.pre-log
    .img{style: "background-image: url(\"#{image_path('placeholder-illy2.jpg')}\")"}
    .text
      %h2.secondary Login
      %ul.form-row
        %li
          = f.label :email
          = f.email_field :email, autofocus: true
        %li
          = f.label :password
          %br/
          = f.password_field :password, autocomplete: 'off'
        - if devise_mapping.rememberable?
          %li
            = f.check_box :remember_me
            = f.label :remember_me

      %footer
        %button.btn.submit Login
        -# %p.left
        -#   = link_to 'Forgot your password?', new_password_path(resource_name), class: 'underline'
        -# %p.right
        -#   Donâ€™t have an account?
        -#   = link_to 'Sign up', new_registration_path(resource_name), class: 'underline'

= render 'devise/shared/links'
