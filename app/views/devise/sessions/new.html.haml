%h1 Nau mai, haere mai

= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  %header.header
    %a.logo{:href => "./"} Whare Hauora
    %h1.lg Kia ora
    %h4.lg Login to start using Whare Hauora
  %section.card.pre-log
    .img{style: "background-image: url(\"#{image_path('placeholder-illy2.jpg')}\")"}
    .text
      %h2.secondary Login
      %ul.form-row
        %li
          = f.label :email
          = f.email_field :email, autofocus: true
        %li
          = f.label :password
          %br/
          = f.password_field :password, autocomplete: 'off'
        - if devise_mapping.rememberable?
          %li
            = f.check_box :remember_me
            = f.label :remember_me
        %li
          -# %a.btn.submit{:href => "#"} Login
          = f.submit 'Log in'
      %footer
        -# %p.right= render 'devise/shared/links'
        %p.left
          = link_to 'Forgot your password?', new_password_path(resource_name), class: 'underline'
        %p.right
          Donâ€™t have an account?
          = link_to 'Sign up', new_registration_path(resource_name), class: 'underline'
