%h2 Editing User
.pure-form.pure-form-aligned
  = form_for @user, url: { action: 'update' } do |f|
    = f.label :email
    = f.text_field :email

    - @roles.each do |r|
      %label
        = check_box_tag 'user[role_ids][]', r.id, f.object.roles.include?(r)
        = r.friendly_name
    %button.pure-button.pure-button-primary
      save

%p
  = link_to 'cancel', admin_users_path

  = button_to admin_user_path(@user), method: :delete, class: 'pure-button button-warning' do
    delete
    = fa_icon 'trash'
