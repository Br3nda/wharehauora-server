%h2 Room types


.pure-g
  .pure-u-1-4
    add new room_type
    = form_for RoomType.new, url: { action: 'create' } do |f|
      = render 'form', f: f

  .pure-u-3-4
    %table.pure-table
      %thead
        %tr
          %th Name
          %th Min temp
          %th Max temp
      - @room_types.each do |ht|
        %tr
          %td= ht.name
          %td= ht.min_temperature
          %td= ht.max_temperature
          %td
            = link_to edit_admin_room_type_path(ht) do
              = fa_icon 'edit'
          %td
            = link_to admin_room_type_path(ht),
              method: :delete,
              data: { confirm: 'delete this room_type?' } do
              = fa_icon 'trash'
